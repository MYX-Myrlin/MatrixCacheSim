<!--
  _matrix.html.erb
  Partial used for rendering a matrix. The matrix will always fill the allotted
  space given to it.

  locals:
  :name (String) - Text to display as the name of the matrix
  :id (String) - ID to prepend to matrix elements IDs
  :height (Integer) - Height of the matrix
  :width (Integer) - Width of the matrix
-->
<!-- Root container for the Matrix -->
<div class="d-flex flex-column flex-fill align-items-stretch
  border border-thick border-primary p-4 mx-2 matrix" id="<%= id %>">
  <h3 class="bg-secondary p-2 text-center text-white"><%= name %></h3>
  <% (1..height).each do |y| %>
    <!-- Row container -->
    <div class="d-flex flex-fill flex-fix">
      <% (1..width).each do |x| %>
        <!-- Matrix element -->
        <div class="flex-fill flex-fix border border-primary <%= "#{id}-element" %>">
          <span>&nbsp;</span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
